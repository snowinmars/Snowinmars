@model Snowinmars.Ui.Models.BookModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Layouts/DefaultLayout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>BookModel</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.PageCount)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PageCount)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Year)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Year)
        </dd>
		
		<dt>
			@Html.DisplayNameFor(model => model.AuthorModels)
		</dt>

	    <dd>
		    @{
			    var authors = Model.AuthorModels.ToList();

				List<SelectListItem> items = new List<SelectListItem>(authors.Count);
			    items.AddRange(authors.Select(author => new SelectListItem() {Text = author.Shortcut,}));
		    }

		    @Html.DropDownList("authorDropdown", items, new Dictionary<string, object> {{"class", "authorDropdown"},})
	    </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", "Book", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index", "Home")
</p>
