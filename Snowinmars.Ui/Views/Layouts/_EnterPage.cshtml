@using Snowinmars.Ui.App_LocalResources
@using Snowinmars.Ui.App_Start
@model Snowinmars.Ui.Models.CreateUserModel

<div class="modal fade" id="enterModal" tabindex="-1" role="dialog" aria-labelledby="enterModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">@Global.Layout_Enter</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Enter", "User", FormMethod.Post))
                {
                    <div class="form-horizontal col-xs-12 col-sm-10 col-sm-offset-1">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <div>
                                @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label" })
                            </div>
                            <div>
                                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", tabindex = "1" } })
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="userInfo">
                            <div class="newUserHello hidden">
                                @Global.EnterPage_NewUserHello
                            </div>

                            <div class="oldUserHello hidden">
                                @Global.EnterPage_OldUserHello
                            </div>
                        </div>

                        <div class="form-group">
                            <div>
                                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label" })
                            </div>
                            <div>
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control ", tabindex = "2" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group hidden">
                            <div>
                                @Html.LabelFor(model => model.PasswordConfirm, htmlAttributes: new { @class = "control-label" })
                            </div>
                            <div>
                                @Html.EditorFor(model => model.PasswordConfirm, new { htmlAttributes = new { @class = "form-control", disabled = true, tabindex = "3" } })
                                @Html.ValidationMessageFor(model => model.PasswordConfirm, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        @if (EmailService.IsSmtpReady)
                        {
                            <div class="form-group">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <div class="btn btn-xs spoiler-trigger" data-toggle="collapse">@Global._ForgotPassword</div>
                                    </div>
                                    <div class="panel-collapse collapse out">
                                        <div class="panel-body">
                                            <div>@Global._ForgotPasswordHint</div>
                                            <div>
                                                <textarea class="form-control" id="ForgotPasswordAdminMessage" name="message" tabindex="-1" rows="5"></textarea>
                                            </div>

                                            <button type="button" class="btn btn-default col-xs-2 col-xs-offset-10" id="ForgotPasswordAdminMessageSubmit">@Global._Ok</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">@Global._Close</button>
                        <button type="submit" class="btn btn-primary">@Global._Go</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>