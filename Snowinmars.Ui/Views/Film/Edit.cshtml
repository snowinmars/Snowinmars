@using Snowinmars.Entities
@using Snowinmars.Ui.App_LocalResources
@model Snowinmars.Ui.Models.FilmModel

@{
	ViewBag.Title = "Edit";
	Layout = "~/Views/Layouts/DefaultLayout.cshtml";
}

@section Content
{
	<link href="~/Content/snowinmars/css/film/edit.css" rel="stylesheet" />
}

<h2>@Global.FilmEdit_Header</h2>

@using (Html.BeginForm("Edit", "Film", FormMethod.Post))
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">

		<h4>@Global._Film</h4>
		<div>@Html.ActionLink(Global._BackToList, "Index", "Film")</div>
		<hr />

		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		@Html.HiddenFor(model => model.Id)

		<div class="modal fade" id="addLiveLibUrlModal" tabindex="-1" role="dialog" aria-labelledby="addLiveLibUrlModalLabel">
			<div class="modal-dialog" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
						<h4 class="modal-title" id="myModalLabel">Modal title</h4>
					</div>
					<div class="modal-body">
						@Html.LabelFor(model => model.KinopoiskUrl, htmlAttributes: new { @class = "control-label col-md-2" })
						<div class="col-md-6">
							@Html.EditorFor(model => model.KinopoiskUrl, new { htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(model => model.KinopoiskUrl, "", new { @class = "text-danger" })
						</div>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-default btn-closeUrlModal" data-dismiss="modal">@Global._Close</button>
						<button type="submit" class="btn btn-primary btn-okUrlModal" data-dismiss="modal">@Global._Ok</button>
					</div>
				</div>
			</div>
		</div>

		<div class="col-xs-12 urls">

			<div class="btn-group" role="group" aria-label="...">
				@if (string.IsNullOrWhiteSpace(Model.KinopoiskUrl))
				{
					<button type="button" class="btn btn-default kinopoiskUrlButton disabled">LiveLib</button>
					<button type="button" class="btn btn-default addKinopoiskUrlButton glyphicon glyphicon-plus" data-toggle="modal" data-target="#addKinopoiskUrlModal"></button>
				}
				else
				{
					<a href="@Model.KinopoiskUrl" target="_blank" type="button" class="btn btn-default kinopoiskUrlButton">LiveLib</a>
					<button type="button" class="btn btn-default editKinopoiskUrlButton glyphicon glyphicon-pencil" data-toggle="modal" data-target="#addKinopoiskUrlModal"></button>
				}
			</div>

			<div class="urlSaveMessage">
				<span>@Global._SaveUrlHint</span>
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-6">
				@Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.AuthorIds, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-6">
				@Html.DropDownList("authorIds", new SelectListItem[0], new Dictionary<string, object> { { "class", "authorIds" }, { "multiple", "multiple" }, })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Year, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-6">
				@Html.EditorFor(model => model.Year, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="@Global._Save" class="btn btn-default" />
			</div>
		</div>
	</div>
}

@section Scripts
{
	<script src="~/Scripts/snowinmars/filmEdit.js"></script>
}